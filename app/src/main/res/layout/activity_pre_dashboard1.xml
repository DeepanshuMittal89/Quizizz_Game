<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".PreDashboard1"
    android:background="#441841"
    android:orientation="vertical">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Quizizz"
        android:textColor="@color/white"
        android:textSize="40sp"
        android:textAlignment="center"
        android:textStyle="bold"
        android:fontFamily="sans-serif-condensed"
        android:paddingTop="5sp"
        android:paddingBottom="5sp">

    </TextView>
    <com.google.android.material.card.MaterialCardView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:cardCornerRadius="20sp"
        android:layout_gravity="center"
        android:background="@color/white">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Welcome!"
                        android:textSize="25sp"
                        android:textColor="#441841"
                        android:layout_marginTop="90sp"
                        android:layout_marginLeft="20sp">
                    </TextView>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Where are you\nusing Quizizz?"
                        android:textSize="25sp"
                        android:textColor="@color/black"
                        android:fontFamily="sans-serif-medium"
                        android:layout_marginLeft="20sp">
                    </TextView>

                </LinearLayout>
                <ImageView
                    android:layout_width="200dp"
                    android:layout_height="200dp"
                    android:layout_marginLeft="45dp"
                    android:layout_marginTop="20dp"
                    android:src="@drawable/robot_quiz">
                </ImageView>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="50sp">
                <ImageButton
                    android:layout_width="180dp"
                    android:layout_height="180dp"
                    android:layout_marginHorizontal="10sp"
                    android:background="@drawable/predash1button"
                    android:src="@drawable/school_img_quiz"
                    android:scaleType="center"
                    android:adjustViewBounds="true"
                    android:text="School"
                    android:contentDescription="Student_Buton">
                </ImageButton>
                <TextView
                    android:layout_width="175sp"
                    android:layout_height="35sp"
                    android:text="Student"
                    android:textSize="30sp"
                    android:layout_marginLeft="-188sp"
                    android:layout_marginTop="142sp"
                    android:textAlignment="center"
                    android:textColor="@color/white"
                    android:background="@color/purple">
                </TextView>

                <ImageButton
                    android:layout_width="180sp"
                    android:layout_height="180sp"
                    android:layout_marginHorizontal="10sp"
                    android:src="@drawable/office_quiz"
                    android:contentDescription="Office_button"
                android:background="@drawable/predash1button">
                </ImageButton>
                <TextView
                    android:layout_width="175sp"
                    android:layout_height="35sp"
                    android:text="Office"
                    android:textSize="30sp"
                    android:layout_marginLeft="-188sp"
                    android:layout_marginTop="142sp"
                    android:textAlignment="center"
                    android:textColor="@color/white"
                    android:background="@color/purple">
                </TextView>

            </LinearLayout>
            <ImageButton
                android:layout_width="180sp"
                android:layout_height="180sp"
                android:layout_gravity="center"
                android:layout_marginTop="20sp"
                android:src="@drawable/home_quiz_img"
                android:contentDescription="Home_button"
            android:background="@drawable/predash1button">
            </ImageButton>
            <TextView
                android:layout_width="175sp"
                android:layout_height="35sp"
                android:text="Home"
                android:textSize="30sp"
                android:layout_marginLeft="104sp"
                android:layout_marginTop="-38sp"
                android:textAlignment="center"
                android:textColor="@color/white"
                android:background="@color/purple">
            </TextView>

        </LinearLayout>

    </com.google.android.material.card.MaterialCardView>

</LinearLayout>