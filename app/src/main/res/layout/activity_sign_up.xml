<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".PreDashboard1"
    android:background="#441841"
    android:orientation="vertical">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Quizizz"
        android:textColor="@color/white"
        android:textSize="40sp"
        android:textAlignment="center"
        android:textStyle="bold"
        android:fontFamily="sans-serif-condensed"
        android:paddingTop="5sp"
        android:paddingBottom="5sp">

    </TextView>
    <com.google.android.material.card.MaterialCardView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:cardCornerRadius="30sp"
        android:layout_gravity="center"
        android:layout_marginTop="50sp"
        android:layout_marginBottom="150sp"
        android:layout_marginHorizontal="15sp"
        android:background="@color/white">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Stay Coonnected!"
                        android:textSize="25sp"
                        android:textColor="#441841"
                        android:textStyle="bold"
                        android:layout_marginTop="80sp"
                        android:layout_marginLeft="10sp">
                    </TextView>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Enter your email address and password\nto get access to your account"
                        android:textSize="14sp"
                        android:layout_marginVertical="10dp"
                        android:textColor="@color/black"
                        android:layout_marginLeft="10sp">
                    </TextView>

                </LinearLayout>
                <ImageView
                    android:layout_width="200dp"
                    android:layout_height="200dp"
                    android:layout_marginLeft="-15dp"
                    android:src="@drawable/robot_quiz">
                </ImageView>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="-15sp"
                android:orientation="vertical">
                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginVertical="3sp"
                    app:boxBackgroundColor="@color/white"
                    style="@style/ThemeOverlay.Material3.AutoCompleteTextView.OutlinedBox"
                    android:layout_marginHorizontal="20sp"
                    >
                    <androidx.appcompat.widget.AppCompatEditText
                        android:id="@+id/email"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Email"
                        android:textColor="@color/purple"
                        android:contentDescription="user name"
                        android:inputType="textCapSentences">
                    </androidx.appcompat.widget.AppCompatEditText>

                </com.google.android.material.textfield.TextInputLayout>
                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginVertical="3sp"
                    app:passwordToggleEnabled="true"
                    app:boxBackgroundColor="@color/white"
                    style="@style/ThemeOverlay.Material3.AutoCompleteTextView.OutlinedBox"
                    android:layout_marginHorizontal="20sp"
                    >
                    <androidx.appcompat.widget.AppCompatEditText
                        android:id="@+id/etv_password"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Password"
                        android:textColor="@color/purple"
                        android:contentDescription="enter the password"
                        android:inputType="textCapSentences">
                    </androidx.appcompat.widget.AppCompatEditText>

                </com.google.android.material.textfield.TextInputLayout>
                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginVertical="3sp"
                    app:passwordToggleEnabled="true"
                    app:boxBackgroundColor="@color/white"
                    style="@style/ThemeOverlay.Material3.AutoCompleteTextView.OutlinedBox"
                    android:layout_marginHorizontal="20sp"
                    >
                    <androidx.appcompat.widget.AppCompatEditText
                        android:id="@+id/etv_confirm_password"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Confirm Password"
                        android:textColor="@color/purple"
                        android:contentDescription="Confirm your password"
                        android:inputType="textCapSentences">
                    </androidx.appcompat.widget.AppCompatEditText>

                </com.google.android.material.textfield.TextInputLayout>
                <Button
                    android:id="@+id/sign_up_btn"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginHorizontal="20sp"
                    android:text="Sign Up"
                    android:backgroundTint="@color/purple"
                    android:textSize="18sp"
                    android:layout_marginTop="15sp">
                </Button>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="15sp"
                    android:layout_marginTop="-2sp"
                    android:layout_marginLeft="100sp"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="13sp"
                        android:textStyle="bold"
                        android:textColor="@color/purple"
                        android:textAlignment="center"
                        android:text="Already have an account?">
                    </TextView>
                    <TextView
                        android:id="@+id/tv_login"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="13sp"
                        android:textStyle="bold"
                        android:textColor="@color/purple"
                        android:textAlignment="center"
                        android:text=" Login">
                    </TextView>
                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

    </com.google.android.material.card.MaterialCardView>

</LinearLayout>